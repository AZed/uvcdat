execute_process(
  COMMAND "wget" @LXML_URL@/@LXML_GZ@
  WORKING_DIRECTORY "@CMAKE_CURRENT_BINARY_DIR@"
  RESULT_VARIABLE res
  OUTPUT_VARIABLE LXML_OUT
  OUTPUT_VARIABLE LXML_ERR)

if(NOT ${res} EQUAL 0)
  message("[INFO] LXML Errors detected: \n${LXML_OUT}\n${LXML_ERR}")
  message(FATAL_ERROR "[ERROR] ${res}")
endif()
message("[INFO] lxml downloaded.")

