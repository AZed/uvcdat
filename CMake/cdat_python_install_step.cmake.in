
if(NOT APPLE)
  set(ENV{@LIBRARY_PATH@} "@CMAKE_INSTALL_PREFIX@/lib:@cdat_EXTERNALS@/lib:$ENV{@LIBRARY_PATH@}")
endif()

set(ENV{CPPFLAGS} "-I@cdat_EXTERNALS@/include @ADDITIONAL_CPPFLAGS@")
set(ENV{CXXFLAGS} "-I@cdat_EXTERNALS@/include @ADDITIONAL_CXXFLAGS@")  
set(ENV{CFLAGS} "-w -I@cdat_EXTERNALS@/include @ADDITIONAL_CFLAGS@")
set(ENV{LOCNCCONFIG} "@cdat_EXTERNALS@/bin/nc-config")
set(ENV{EXTERNALS} "@cdat_EXTERNALS@")

if(APPLE)
  set(ENV{MAC_OSX_DEPLOYMENT_TARGET} "@CMAKE_OSX_DEPLOYMENT_TARGET@")
endif()

execute_process(
  COMMAND @PYTHON_EXECUTABLE@ install.py @qt_flags@ --enable-pp --prefix @CMAKE_INSTALL_PREFIX@
  WORKING_DIRECTORY "@WORKING_DIR@"
  RESULT_VARIABLE res)

if(NOT ${res} EQUAL 0)
  message("Make Errors detected: \n${CDAT_OUT}\n${CDAT_ERR}")
  message(FATAL_ERROR "Error in Python Install")
endif()
message("Make succeeded.")

